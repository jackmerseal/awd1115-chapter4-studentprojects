@model List<Contact>
@{
    ViewData["Title"] = "Contact Manager";
}
<div class="container">
	<h1 class="p-5 text-center bg-black text-white">Contact Manager</h1>
	<div class="mb-2">
		<a asp-controller="Contact" asp-action="Add" class="btn btn-outline text-primary">Add Contact</a>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Phone</th>
				<th>Email</th>
				<th>Category</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var contact in Model)
			{
				<tr>
					<td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId" class="text-primary">@contact.Firstname</a></td>
					<td><a asp-controller="Contact" asp-action="Details" class="text-primary">@contact.Lastname</a></td>
					<td>@contact.Phone</td>
					<td>@contact.Email</td>
					<td>@contact.Category.Name</td>
					<td>
						<a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug" class="btn btn-outline-primary">Edit</a>
						<a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug" class="btn btn-outline-danger">Delete</a>
					</td>
				</tr>
				<input type="hidden" asp-for="@contact.ContactId" />
			}
		</tbody>
		
	</table>
</div>

