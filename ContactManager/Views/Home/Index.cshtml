@model List<Contact>
@{
    ViewData["Title"] = "Contact Manager";
}
<div class="mb-2">
    <a asp-controller="Contact" asp-action="Add" class="btn btn-outline-primary">Add Contact</a>
</div>
<table class="table table-bordered table-striped">
<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Phone</th>
			<th>Email</th>
			<th>Category</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var contact in Model)
		{
			<tr>
				<td>@contact.Firstname</td>
				<td>@contact.Lastname</td>
				<td>@contact.Phone</td>
				<td>@contact.Email</td>
				<td>@contact.Category.Name</td>
				<td>
					<a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug" class="btn btn-outline-primary">Edit</a>
					<a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug" class="btn btn-outline-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
